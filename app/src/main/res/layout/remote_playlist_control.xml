<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playlist_control"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="?attr/toolbarColor">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/playlist_ctrl_play_all_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/play_all"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:cornerRadius="0dp"
        app:icon="@drawable/ic_play_arrow_white_24dp_rand"
        app:iconGravity="textStart"
        app:iconPadding="4dp"
        app:iconTint="@color/white"
        app:rippleColor="@color/youtube_dark_color"
        app:textAllCaps="true"/>

    <View
        android:id="@+id/anchorRight"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="?attr/separator_color"
        android:clickable="false"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/playlist_ctrl_play_popup_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/controls_popup_title"
        android:textColor="@color/white"
        android:textSize="@dimen/channel_rss_title_size"
        app:cornerRadius="0dp"
        app:icon="@drawable/ic_picture_in_picture_white_24dp_rand"
        app:iconGravity="textStart"
        app:iconPadding="4dp"
        app:iconTint="@color/white"
        app:rippleColor="@color/youtube_dark_color"
        app:textAllCaps="true"/>

    <View
        android:id="@+id/anchorLeft"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="?attr/separator_color"
        android:clickable="false"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/playlist_ctrl_share"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/share"
        android:textColor="@color/white"
        android:textSize="@dimen/channel_rss_title_size"
        app:cornerRadius="0dp"
        app:icon="@drawable/ic_share_white_24dp_rand"
        app:iconGravity="textStart"
        app:iconPadding="4dp"
        app:iconTint="@color/white"
        app:rippleColor="@color/youtube_dark_color"
        app:textAllCaps="true"/>

</LinearLayout>
