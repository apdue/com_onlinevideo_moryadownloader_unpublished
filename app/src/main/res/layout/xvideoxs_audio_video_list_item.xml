<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:elevation="8dp"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="2dp"
    android:backgroundTint="#F9F9F9"
    android:background="@drawable/custom_ripple_rand"
    >
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="100.0dip"
            android:layout_height="60.0dip"
            app:cardCornerRadius="6.0dip"
            app:cardElevation="5.0dip">

            <ImageView
                android:id="@+id/videoThumbnail"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_play_arrow_rand"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/videoDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center|right"
                android:layout_marginRight="3.0dip"
                android:layout_marginBottom="3.0dip"
                android:background="#ff000000"
                android:paddingLeft="3.0dip"
                android:paddingRight="3.0dip"
                android:text="00:00:00"
                android:textColor="#ffffffff"
                android:textSize="12.0dip" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/videoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_toLeftOf="@+id/moreOptions"
            android:layout_toRightOf="@+id/cardView"
            android:text="Hello"
            android:maxLines="2"
            android:textColor="@color/textColor"
            android:textSize="17.0dip" />

        <ImageView
            android:id="@+id/moreOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10.0dip"
            app:srcCompat="@drawable/ic_more_vert_black_24dp_rand" />

        <Button
            android:id="@+id/save"
            android:layout_width="80.0dip"
            android:layout_height="30.0dip"
            android:background="@color/colorGreen"
            app:srcCompat="@drawable/ic_cloud_download_black_24dp_rand"
            android:text="Save"
            android:textColor="#ffffffff"
            android:visibility="gone" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>